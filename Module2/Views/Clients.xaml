<UserControl x:Class="Module2.Views.Clients"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <DataGrid ItemsSource="{Binding LstClient}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Path=NO_CLIENT}" Header="num client" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=SOCIETE}" Header="société" IsReadOnly="True"/>
                <DataGridTextColumn  Binding="{Binding Path=NOM_CL}" Header="nom " IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=PRENOM_CL}" Header="prenom" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=ADRESSE_CL}" Header="Adresse" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=VILLE_CL}" Header="Ville" IsReadOnly="True"/>
                <DataGridTextColumn Binding="{Binding Path=CODE_POST_CL}" Header="Code postal" IsReadOnly="True"/>
                
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
